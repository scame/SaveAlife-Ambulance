<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/local_spinner"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ok_btn"
        android:layout_toStartOf="@+id/ok_btn"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remote_spinner"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/local_spinner"
        android:layout_alignLeft="@+id/local_spinner"
        android:layout_alignStart="@+id/local_spinner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/ok_btn"
        android:layout_above="@+id/remote_spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_alignParentLeft="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/download_btn"
        android:layout_alignTop="@+id/remote_spinner"
        android:layout_alignLeft="@+id/ok_btn"
        android:layout_alignStart="@+id/ok_btn" />
</RelativeLayout>